<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="container_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="operadorador_Button" parent="container_button">
        <item name="android:background">@color/cinza</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button_backspace" parent="container_button">
        <item name="android:background">@color/cinzaescuro</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="numero_Button" parent="container_button">
        <item name="android:background">@drawable/botao_numero_precionado</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
