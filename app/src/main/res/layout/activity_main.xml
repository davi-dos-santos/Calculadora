<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40dp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30dp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_limpar"
            style="@style/numero_Button"
            android:layout_weight="3"
            android:text="C"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_positivo_negativo"
            style="@style/numero_Button"
            android:layout_weight="3"
            android:text="+/-"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_porcentagem"
            style="@style/numero_Button"
            android:layout_weight="3"
            android:text="%"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/backpace"
            style="@style/Button_backspace"
            android:src="@drawable/backspace"
            android:layout_weight="3"
            android:scaleType="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_7"
            style="@style/numero_Button"
            android:text="7"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_8"
            style="@style/numero_Button"
            android:text="8"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_9"
            style="@style/numero_Button"
            android:text="9"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_divisao"
            style="@style/operadorador_Button"
            android:text="/"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_4"
            style="@style/numero_Button"
            android:text="4"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_5"
            style="@style/numero_Button"
            android:text="5"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_6"
            style="@style/numero_Button"
            android:text="6"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_vezes"
            style="@style/operadorador_Button"
            android:text="X"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_1"
            style="@style/numero_Button"
            android:text="1"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_2"
            style="@style/numero_Button"
            android:text="2"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_3"
            style="@style/numero_Button"
            android:text="3"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_menos"
            style="@style/operadorador_Button"
            android:text="-"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_0"
            style="@style/numero_Button"
            android:text="0"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/virgula"
            style="@style/numero_Button"
            android:text=","
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_igual"
            style="@style/Button_backspace"
            android:text="="
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botton_mais"
            style="@style/operadorador_Button"
            android:text="+"
            />
    </LinearLayout>




</LinearLayout>